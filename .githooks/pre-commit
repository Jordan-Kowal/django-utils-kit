#!/bin/sh
set -eu

echo "---------- Git hook: pre-commit ----------"

# Ruff (imports, lint, and format)
echo ""
echo ">>> [1/3] Running Ruff"
ruff check --select I .
ruff check .
ruff format --check .

# Ty (type checking)
echo ""
echo ">>> [2/3] Running Ty"
ty check . --error-on-warning

# Run tests
echo ""
echo ">>> [3/3] Running tests"
coverage run django_utils_kit/tests/setup.py
coverage report --fail-under=90

echo "------------------------------------------"
