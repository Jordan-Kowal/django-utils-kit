#!/bin/sh
set -eu

echo "---------- Git hook: pre-commit ----------"

# Ruff (imports, lint, and format)
echo ""
echo ">>> [1/3] Running Ruff"
ruff check --select I .
ruff check .
ruff format --check .

# MyPy (type checking)
echo ""
echo ">>> [2/3] Running MyPy"
mypy .

# Run tests
echo ""
echo ">>> [3/3] Running tests"
coverage run -m unittest discover .
coverage report --fail-under=90

echo "------------------------------------------"
